@model BankApp.ViewModels.AccountDetailsViewModel

@{
    ViewData["Title"] = "CreditCash";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="card card-cascade narrower" style="margin-top: 20px">
    <div class="mycardstyle">
        <div class="text-center">
            <h1 style="color:#fff !important;">Credit in Cash</h1>
        </div>
    </div>
    <div class="card-body">
        <div class="text-center">
            <h3 style=" color:#36b9cc">Account ID: @Model.AccountId </h3>
            <h3 style=" color:#36b9cc">Balance: @Model.AccountBalance </h3>
        </div>

        <div class="d-flex justify-content-around mb-3">
            <div class="col-md-4 text-center">
                <form asp-action="CreditCash" method="post">
                    <input asp-for="AccountId" value="@Model.AccountId" hidden />
                    <input asp-for="AccountBalance" class="form-control disabled" value="@Model.AccountBalance" hidden />
                    <div class="form-group">
                        <label asp-for="Transaction.Amount" class="control-label"></label>
                        <input asp-for="Transaction.Amount" class="form-control" />
                        <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn" style="color:#fff; background-color:#0084b0" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class=" text-center" style=" color:#36b9cc">@ViewBag.Exception</div>
</div>
<br />
<div>
    <a class="nav-link" asp-controller="Home" asp-action="Index" style=" color:#36b9cc">Back to Start</a>
</div>


