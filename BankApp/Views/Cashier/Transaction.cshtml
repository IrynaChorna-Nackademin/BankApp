@model BankApp.ViewModels.AccountDetailsViewModel

@{
    ViewData["Title"] = "Transaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card card-cascade narrower" style="margin-top: 20px">
    <div class="mycardstyle">
        <div class="text-center">
            <h1 style="color:#fff !important;"> Transactions</h1>
        </div>
        <form asp-controller="Cashier" asp-action="Transaction" method="get" asp-route-searchAccount="@Model.SearchAccount" class="form-inline md-form ml-auto mb-4">
            <input asp-for="SearchAccount" class="form-control mr-sm-2" type="search" placeholder="Enter account ID..." aria-label="Search">
            <button class="mybuttonstyle" type="submit" style=" color: #fff !important;"><i class="fa fa-search mt-0"></i></button>
        </form>

    </div>
    <div class="card-body">
        @if (Model.AccountId != 0)
        {
        <div class="text-center">
            <h3 style=" color:#36b9cc">Account ID: @Model.AccountId </h3>
            <h3 style=" color:#36b9cc">Balance: @Model.AccountBalance </h3>

            <a asp-controller="Cashier" asp-action="CreditCash" asp-route-id="@Model.AccountId" class="btn btn-icon-split" style="color:#fff; background-color:#0084b0">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Credit in Cash</span>
            </a>
            <a asp-controller="Cashier" asp-action="Transfer" asp-route-id="@Model.AccountId" class="btn btn-icon-split" style="color:#fff; background-color:#0084b0">
                <span class="text">Transfer from Account</span>
            </a>
            <a asp-controller="Cashier" asp-action="WithdrawalCash" asp-route-id="@Model.AccountId" class="btn btn-icon-split" style="color:#fff; background-color:#0084b0">
                <span class="icon text-white-50">
                    <i class="fas fa-minus"></i>
                </span>
                <span class="text">Withdrawal in Cash</span>
            </a>
            
        </div>
        }

    </div>
    <div class=" text-center" style=" color:#36b9cc">@ViewBag.Exception</div>
</div>
<br />
<div>
    <a class="nav-link" asp-controller="Home" asp-action="Index" style=" color:#36b9cc">Back to Start</a>
</div>
